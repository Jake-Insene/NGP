    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "NGP Build",
            "name": "NGP Launch V1",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/NGP/ngpv1",
            "args": ["-bios", "BIOS/BIOS.BIN"],
            "cwd": "${workspaceFolder}",
        },
        {
            "preLaunchTask": "NGP Build",
            "name": "NGPAS Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/NGPAS/ngpas",
            "args": ["BIOS/BIOS.asm"],
            "cwd": "${workspaceFolder}",
        }
    ]
}